extends ./layouts/master.pug
include ./mixins/form-outline.pug
block header 
  header Header
block content
  div.container
    +form-outline({
      modifiers: 'form-outline--text-line form-outline--icon-right',
      inputModifiers: 'form-select form-solo',
      placeholder: 'Search',
      dropdownSelect: 'true',
      toggle: 'dropdown-toggle',
      icon: 'expand_more',
      appendTo: 'body',
      dropdownItems: [{
        value: 'select A',
        label: 'select A',
        selected: false
      },{
        value: 'select B',
        label: 'select B',
        selected: false
      },{
        value: 'option C', 
        label: 'option C',
        selected: false
      }]
    })
    .map-filter#forte-map-filter
      ul.map-filter__list.list-unstyled.list-row
        each i in [{"name": "All", "value": "all", "selected": true}, {"name": "Hotel", "value": "hotel"}, {"name": "Villa", "value": "villa"}]
          li.map-filter__item.list-col
            input.map-filter__item-input(type="checkbox" name="map-filter", value=i.value, checked = i.selected) 
            label.map-filter__item-label !{i.name}
    //- .map-filter#forte-map-filter-radio
    //-   ul.map-filter__list
    //-     each i in [{"name": "All", "value": "all", "selected": true}, {"name": "Hotel", "value": "hotel"}, {"name": "Villa", "value": "villa"}]
    //-       li.map-filter__item 
    //-         input.map-filter__item-input(type="radio" name="map-filter", value=i.value, checked = i.selected) 
    //-         label.map-filter__item-label !{i.name}

    .aspect-ratio--16x9 
      .aspect-ratio__inner-content 
        div.forte-map.interactive-map(data-map-styles="./js/data/map.style.json" data-markers="./js/data/hotspots.json", 
        data-ground-overlays=[{"coordinates":{"S": 38.92836424033743, "W": 8.924896661531204, "N": 38.94287213966831, "E": 8.937440372730721}, 
        "zoomLevel": 16,
        "overlay": require("@images/MAPNEWNEWNEW.jpg").default},
      ], data-map-options={
        zoom: 16, 
        center: { lat: 38.932583, lng: 8.932833 },
        minZoom: 16,
        maxZoom: 19,
        restriction: {
          latLngBounds: {
            north: 38.94287213966831,
            south: 38.92836424033743,
            east: 8.937440372730721,
            west: 8.924896661531204,
          },
          strictBounds: false,                     
        },
        disableDefaultUI: true,
        zoomControl: true
      }, 
      data-locale={"Go to": "vai al sito", "Close" : "vicino"},
      data-filter-link="#forte-map-filter"
      data-append-legends-to="#forte-map-legends"
      )

    .accordion
      .accordion-trigger 
        span.accordion-trigger__button 
          i.material-symbols-outlined expand_more
      .accordion-panel
        .accordion-panel__inner
          #forte-map-legends.accordion 

block footer
  footer footer